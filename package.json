{
  "name": "@canonical/jujulib",
  "version": "3.0.1",
  "description": "Juju API client",
  "main": "dist/api/client.js",
  "types": "dist/api/client.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "generate-facades": "SCHEMA=generator/schema/schema.json JUJU_VERSION=`cat generator/schema/juju-version.txt` JUJU_GIT_SHA=`cat generator/schema/juju-git-sha.txt` node --enable-source-maps dist/generator/index.js",
    "regenerate-all-facades": "node generator/regenerate-all.js",
    "store-schema": "./scripts/store-schema.sh",
    "generate-docs": "typedoc api/* --out docs --entryPointStrategy expand --includeVersion --gitRemote upstream",
    "lint": "eslint api/",
    "format": "prettier --write '**/*.(js|ts|json)' && eslint --fix .",
    "test": "tap 'api/tests/test-!(helpers)*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juju/js-libjuju.git"
  },
  "keywords": [
    "juju",
    "api",
    "client"
  ],
  "author": "Canonical (https://webteam.canonical.com/)",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/juju/js-libjuju/issues"
  },
  "homepage": "juju.github.io/js-libjuju/",
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/node": "15.3.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "documentation": "13.2.5",
    "eslint": "8.25.0",
    "glob": "^8.0.3",
    "prettier": "2.7.1",
    "sinon": "14.0.1",
    "tap": "16.3.0",
    "typedoc": "0.23.21",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "@canonical/macaroon-bakery": "1.2.2",
    "btoa": "1.2.1",
    "websocket": "1.0.34",
    "xhr2": "0.2.1"
  }
}
